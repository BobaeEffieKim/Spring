<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.yedam.java.book.mapper.BookMapper">
		<!-- 도서번호 조회 -->
		<select id="getBookNo" resultType="BookVO">
			SELECT NVL(MAX(book_no),0)+1 as book_no FROM BOOK_TBL_06
		</select>
	
		<!-- 등록 -->
		<insert id="insertBook" parameterType="BookVO">
			<!-- 
			<selectKey keyProperty="book_no" resultType="Integer" order="BEFORE">
				SELECT NVL(MAX(book_no),0)+1 FROM BOOK_TBL_06
			</selectKey>
			 -->
			INSERT INTO BOOK_TBL_06(
									book_no
									<if test="book_name !=null">
									,book_name
									</if>
									,book_coverimg
									,book_date
									,book_price
									,book_publisher
									,book_info
									)
							VALUES(
									#{book_no}
									<if test="book_name !=null">
									,#{book_name}
									</if>
									,#{book_coverimg}
									,#{book_date}
									,#{book_price}
									,#{book_publisher}
									,#{book_info}
								  )		
		</insert>
		
		<!-- 도서목록 전체조회 -->
		<select id="getBookList" resultType="BookVO">
			SELECT * FROM BOOK_TBL_06 ORDER BY book_no
		</select>
	
	</mapper>